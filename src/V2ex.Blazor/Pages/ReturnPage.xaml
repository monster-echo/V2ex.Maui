<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="V2ex.Blazor.Pages.ReturnPage"
             xmlns:shared="clr-namespace:V2ex.Blazor;assembly=V2ex.Blazor.Shared"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             Title="{Binding PageTitle, Source={x:Reference Root}}"
             x:Name="Root"
             NavigationPage.HasNavigationBar="{Binding HasNavigationBar, Source={x:Reference Root} }">
    <ContentPage.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="#f3f4f6" StatusBarStyle="DarkContent" />
    </ContentPage.Behaviors>
    <BlazorWebView x:Name="blazorWebView" 
                   HostPage="wwwroot/index.html" 
                   StartPath="{Binding TargetLocation, Source={x:Reference Root}}"
                   BlazorWebViewInitialized="OnBlazorWebViewInitialized">
        <BlazorWebView.RootComponents>
            <RootComponent x:Name="RootComponent" Selector="#app" ComponentType="{x:Type shared:Main}"  />
        </BlazorWebView.RootComponents>
    </BlazorWebView>
</ContentPage>