  </ItemGroup>


  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="8.0.0-rc.2.23480.2" />
  </ItemGroup>

  <ItemGroup>
	  <ProjectReference Include="..\V2ex.Api\V2ex.Api.csproj" />
	</ItemGroup>

</Project>
