      <RootNamespace>V2ex.Blazor</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Components\Shared\Tabs.razor.css" />
    <None Remove="Components\Shared\Tabs.razor.js" />
    <None Remove="Pages\Home.razor.css" />
