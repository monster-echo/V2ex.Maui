@inherits LayoutComponentBase
<div class="flex flex-col w-full h-screen antialiased bg-gray-50 dark:bg-gray-900 overflow-hidden">
    <div class="flex flex-row bg-white dark:bg-gray-800">
        <NavBar ShowBackButton="true"></NavBar>
        <SideBar></SideBar>
    </div>
    <div class="flex-1 overflow-hidden sm:ml-64">
        <ErrorBoundary>
            <ChildContent>
                @Body
            </ChildContent>
            <ErrorContent Context="ex">
                @{
                    OnError(@ex);
                }

                <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2">
                    @if (AppConstants.IsDebug)
                    {
                        <p class="errorUI">😈 @ex.Message</p>
                    }
                    else
                    {
                        <p class="errorUI">😈 Unhandled error, Sorry!</p>
                    }
                </div>
            </ErrorContent>
        </ErrorBoundary>
    </div>

</div>

@code {
    [Inject]
    private ILogger<Main> Logger { get; set; } = null!;
    private void OnError(Exception ex)
    {
        this.Logger.LogError(ex, "OnError");
    }

}
