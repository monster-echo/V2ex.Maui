<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style x:Key="HorizontalSeparator" TargetType="BoxView">
        <Setter Property="BackgroundColor" Value="{StaticResource Gray100}"></Setter>
        <Setter Property="HeightRequest" Value="1"></Setter>
    </Style>

    <Style x:Key="VerticalSeparator" TargetType="BoxView">
        <Setter Property="BackgroundColor" Value="{StaticResource Gray100}"></Setter>
        <Setter Property="HeightRequest" Value="1"></Setter>
    </Style>

    <Style x:Key="RoundBadge" TargetType="BoxView">
        <Setter Property="Color" Value="{StaticResource Gray100}"></Setter>
        <Setter Property="BackgroundColor" Value="Transparent"></Setter>
        <Setter Property="CornerRadius" Value="4"></Setter>
    </Style>
</ResourceDictionary>