{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "dotnet",
      "task": "watch V2ex.Blazor.Server",
      "file": "src/V2ex.Blazor.Server",
      "problemMatcher": [
        "$msCompile"
      ],
      "label": "dotnet: watch V2ex.Blazor.Server",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "command": "pnpm watch:css",
      "label": "shell: pnpm watch",
      "options": {
        "cwd": "${workspaceFolder}/src/V2ex.Blazor.Shared"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}